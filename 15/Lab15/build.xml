<?xml version="1.0" ?>
<project name="Lab15" default="war">

    <target name="init">
        <echo message="Build Lab15 Project" />
        <property name = "server"
        value = "D:\ALEX\STUDY\7SEM_4COURSE\JAVA\apache-tomcat-9.0.52\" />
        <property name = "work"
                  value = "D:\ALEX\STUDY\7SEM_4COURSE\JAVA\LABS\15\Lab15\" />
    </target>

    <target name="compile" depends ="init">
        <delete verbose ="true" >
            <fileset dir="${work}build"/>
        </delete>
        <mkdir dir= "${work}build" />
        <javac srcdir = "${work}src" destdir = "${work}build">
            <classpath>
                <fileset dir="${server}lib"/>
                <fileset dir="${work}src\main\webapp\WEB-INF\lib"/>

            </classpath>
        </javac>
    </target>

    <target name="create" depends ="compile">
        <delete dir= "${server}webapps\Lab15\" />
        <mkdir dir= "${server}webapps\Lab15\" />
        <mkdir dir= "${server}webapps\Lab15\WEB-INF" />
    </target>

    <target name="copy" depends ="create">
        <copy todir="${server}webapps\Lab15\WEB-INF\" file= "${work}src\main\webapp\WEB-INF\web.xml"/>

        <copy todir="${server}webapps\Lab15\jsp">
            <fileset dir="${work}src\main\webapp\jsp"/>
        </copy>

<!--        <copy todir="${server}webapps\Lab15\html">-->
<!--            <fileset dir="${work}src\main\webapp\html"/>-->
<!--        </copy>-->
<!--        <copy todir="${server}webapps\Lab15\" file="${work}src\main\webapp\index.html"/>-->
        <copy todir="${server}webapps\Lab15\" file="${work}src\main\webapp\index.jsp"/>

        <copy todir="${server}webapps\Lab15\WEB-INF\classes">
            <fileset dir="${work}build"/>
        </copy>

    </target>

    <target name="war" depends="copy">
        <war destfile="${server}\webapps\Lab15\Lab15.war" webxml=".\src\main\webapp\WEB-INF\web.xml">
            <lib dir="${work}src\main\webapp\WEB-INF\lib"/>

            <classes dir="build"/>
<!--            <fileset dir="${work}src\main\webapp\html" />-->
            <fileset dir="${work}src\main\webapp\jsp" />

        </war>
    </target>
</project>